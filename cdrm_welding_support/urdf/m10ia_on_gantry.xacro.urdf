<?xml version="1.0" ?>
<robot name="m10ia_on_gantry" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find fanuc_m10ia_support)/urdf/m10ia_macro.xacro" />

  <material name="gray">
    <color rgba="0.66 0.66 0.66 1" />
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="10 0.25 0.25" />
      </geometry>
      <origin xyz="0 -2 2.5" />
      <material name="gray" />
    </visual>
    <visual>
      <geometry>
        <box size="10 0.25 0.25" />
      </geometry>
      <origin xyz="0 2 2.5" />
      <material name="gray" />
    </visual>
  </link>

  <link name="carriage_link_1">
    <visual>
      <geometry>
        <box size="0.25 4.25 0.25" />
      </geometry>
      <origin xyz="0 0 2.75" />
      <material name="gray" />
    </visual>
  </link>

  <joint name="carriage_joint_1" type="prismatic">
    <parent link="base_link" />
    <child link="carriage_link_1" />
    <limit lower="0" upper="10" velocity="1" effort="0" />
    <axis xyz="1 0 0" />
    <origin xyz="-5 0 0" />
  </joint>

  <link name="carriage_link_2">
  </link>

  <link name="carriage_link_3">
    <visual>
      <geometry>
        <box size="0.25 0.25 2" />
      </geometry>
      <origin xyz="0 0 1" />
      <material name="gray" />
    </visual>
  </link>

  <joint name="carriage_joint_2" type="prismatic">
    <parent link="carriage_link_1" />
    <child link="carriage_link_2" />
    <limit lower="-1.75" upper="1.75" velocity="0.5" effort="0" />
    <axis xyz="0 1 0" />
  </joint>

  <joint name="carriage_joint_3" type="prismatic">
    <parent link="carriage_link_2" />
    <child link="carriage_link_3" />
    <limit lower="-1.5" upper="0" velocity="0.5" effort="0" />
    <origin xyz="0.25 0 2.5" />
    <axis xyz="0 0 1" />
  </joint>

  <xacro:fanuc_m10ia prefix="robot_" />

  <joint name="carriage_robot_joint" type="fixed">
    <parent link="carriage_link_3" />
    <child link="robot_base_link" />
    <origin rpy="${pi} 0 0" />
  </joint>

  <link name="torch_link">
    <visual>
      <geometry>
        <mesh filename="package://cdrm_welding_support/meshes/visual/torch_link.stl" />
      </geometry>
      <material name="gray" />
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://cdrm_welding_support/meshes/visual/torch_link.stl" />
      </geometry>
    </collision>
  </link>

  <link name="nozzle_link">
    <visual>
      <geometry>
        <mesh filename="package://cdrm_welding_support/meshes/visual/nozzle_link.stl" />
      </geometry>
      <material name="gray" />
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://cdrm_welding_support/meshes/visual/nozzle_link.stl" />
      </geometry>
    </collision>
  </link>

  <joint name="robot_torch_joint" type="fixed">
    <parent link="robot_tool0" />
    <child link="torch_link" />
  </joint>

  <joint name="torch_nozzle_link" type="fixed">
    <parent link="torch_link" />
    <child link="nozzle_link" />
  </joint>

  <link name="tcp_link">
  </link>

  <joint name="torch_tcp_joint" type="fixed">
    <parent link="torch_link" />
    <child link="tcp_link" />
    <origin xyz="0.05636777 0 0.23057450" rpy="0 ${radians(55)} 0" />
  </joint>

  <link name="workpiece_link">
    <visual>
      <geometry>
        <mesh filename="package://cdrm_welding_support/meshes/l_profile.stl" />
      </geometry>
      <material name="gray" />
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://cdrm_welding_support/meshes/l_profile.stl" />
      </geometry>
    </collision>
  </link>

  <joint name="base_workpiece_joint" type="fixed">
    <parent link="base_link" />
    <child link="workpiece_link" />
  </joint>
</robot>
