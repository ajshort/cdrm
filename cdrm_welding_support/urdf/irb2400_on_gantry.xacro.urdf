<?xml version="1.0" ?>
<robot name="irb_2400_on_gantry" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find abb_irb2400_support)/urdf/irb2400_macro.xacro" />

  <link name="base_link" />

  <link name="carriage_link">
  </link>

  <joint name="track_joint" type="prismatic">
    <parent link="base_link" />
    <child link="carriage_link" />
    <limit lower="0" upper="10" velocity="1" effort="0" />
    <axis xyz="1 0 0" />
  </joint>

  <link name="boom_link">
  </link>

  <joint name="boom_joint" type="prismatic">
    <parent link="carriage_link" />
    <child link="boom_link" />
    <limit lower="0" upper="2" velocity="0.5" effort="0" />
    <axis xyz="0 0 -1" />
  </joint>

  <xacro:abb_irb2400 prefix="robot_" />

  <joint name="boom_robot_joint" type="fixed">
    <parent link="boom_link" />
    <child link="robot_base_link" />
    <origin rpy="${pi} 0 0" />
  </joint>
</robot>
